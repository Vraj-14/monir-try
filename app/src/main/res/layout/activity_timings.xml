<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timings">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:background="#eeebdd"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CE1212"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/shopping_cart" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingTop="40dp"
                android:paddingRight="20dp"
                android:text="Home Harvest"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="28.6sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/account_circle" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/days_one"
            android:gravity="center"
            android:text="Radhe Krishna Kitchen"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView63"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Pure Veg"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="Vasna"
                android:textColor="#000000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView62"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="Meal Time"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_corners"
            android:orientation="vertical"
            android:paddingLeft="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="Breakfast" />

                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="8 - 8:30"
                    android:gravity="end"
                    android:textColor="#808080"
                    android:paddingEnd="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView73"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="Lunch" />

                <TextView
                    android:id="@+id/textView74"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="1 - 1:30"
                    android:textColor="#808080"
                    android:gravity="end"
                    android:paddingEnd="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView75"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="Dinner" />

                <TextView
                    android:id="@+id/textView76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="8 - 8:30"
                    android:gravity="end"
                    android:textColor="#808080"
                    android:paddingEnd="15dp"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/textView77"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="Note"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView59"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_corners"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Please mention if you do not require the Tiffin service on any particular day/s"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView78"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="Note From Owner"
            android:textColor="#808080"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView79"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_corners"
            android:padding="10dp"
            android:paddingLeft="70dp"
            android:paddingTop="5dp"
            android:text="2nd of October is a National Holiday, Tiffin service will not be available on this day"
            android:textColor="#ce1212"
            android:textSize="14dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:backgroundTint="#CE1212"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>