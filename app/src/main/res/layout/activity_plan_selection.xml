<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plan_selection">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:background="#EEEBDD"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="#CE1212"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/shopping_cart" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingTop="25dp"
                android:paddingRight="20dp"
                android:text="Home Harvest"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="28.6sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:paddingTop="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/account_circle" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/days_one"
            android:gravity="center"
            android:text="Radhe Krishna Kitchen"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp">

            <TextView
                android:id="@+id/textView63"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Pure Veg"
                android:textColor="#000000"
                android:textSize="14sp" />

<!--            <ImageView-->
<!--                android:id="@+id/imageView28"-->
<!--                android:layout_width="166dp"-->
<!--                android:layout_height="31dp"-->
<!--                android:layout_weight="1"-->
<!--                app:srcCompat="@drawable/location" />-->

            <TextView
                android:id="@+id/textView67"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="130dp"
                android:textColor="@color/black"
                android:text="Vasna" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView60"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_corners"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Plan Selection"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView62"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:text="Choose Your Plan"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_corners"
            android:orientation="vertical"
            android:paddingLeft="25dp">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Today's Plan"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView65"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:paddingLeft="10dp"
                        android:text="Rs. 100"
                        android:textColor="#808080"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="270dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="30dp"
                    android:background="#808080" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:paddingLeft="10dp"
                        android:text="Weekly Plan"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView64"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:paddingLeft="10dp"
                        android:text="Rs. 650"
                        android:textColor="#808080"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="270dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="30dp"
                    android:background="#808080" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Monthly Plan"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView66"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:paddingLeft="10dp"
                        android:text="Rs. 2800"
                        android:textColor="#808080"
                        android:textSize="16dp" />
                </LinearLayout>
            </RadioGroup>

<!--        </LinearLayout>-->

        </LinearLayout>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:backgroundTint="#CE1212"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>