<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEBDD"
    tools:context=".provider_weekly_plan_2">

    <!-- for Mahi Krupa Kitchen Kitchen -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="#CE1212"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:paddingLeft="15dp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/vector_12"/>

            <TextView
                android:id="@+id/textView101"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingRight="45dp"
                android:text="Home Harvest"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="28.6sp"
                android:textStyle="bold"  />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_corners">

            <TextView
                android:id="@+id/textView104"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Plan Overview"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView105"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mahi Krupa Kitchen"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corners"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView106"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roti Section"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/provider_roti"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView107"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sabji Section"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/textView108"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Primary Sabji"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/editTextText6"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:hint="Aloo Ghobi"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textView109"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secondary Sabji"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/editTextText7"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:hint="Rajma"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textView110"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rice"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/editTextText8"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:hint="Rice"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"  />

                <TextView
                    android:id="@+id/textView112"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dal"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/editTextText10"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:paddingStart="10dp"
                    android:paddingEnd="60dp"
                    android:hint="Dal Fry"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/textView113"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extras"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/editTextText11"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:paddingStart="10dp"
                    android:hint="Papad"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingEnd="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/editTextText12"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Salad"
                    android:background="@drawable/rounded_corners"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingEnd="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/editTextText13"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:background="@drawable/rounded_corners"
                    android:hint="Raita"
                    android:paddingEnd="60dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp" />


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/textView114"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Price"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:inputType="numberSigned"  />
            </LinearLayout>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#CE1212"
                    android:textSize="18dp"
                    android:text="Confirm" />


            </LinearLayout>
        </ScrollView>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>